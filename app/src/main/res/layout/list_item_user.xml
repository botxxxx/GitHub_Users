<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.example.test.data.users.UsersData" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:padding="10dp"
            tools:ignore="HardcodedText">

            <com.example.test.ui.CircleImageView
                android:id="@+id/avatar_url"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="8dp"
                app:imageFromUrl="@{user.avatar_url}"
                android:src="@drawable/github_b_24px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_toEndOf="@+id/avatar_url"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{user.login}"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/site_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_blue"
                    android:focusable="false"
                    android:paddingTop="-10dp"
                    android:paddingBottom="-10dp"
                    android:text="staff"
                    app:isAdmin="@{user.site_admin}"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/avatar_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="@{user.avatar_count}"
                android:padding="5dp"
                android:textSize="20sp"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>